# Example environment variables for NewsApp backend
# Copy this file to `.env` and fill real secrets locally (do NOT commit `.env`).

# MongoDB connection URI (use your Atlas or local connection string)
MONGO_URI="mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/your-db-name"

# JWT secret used to sign authentication tokens (choose a long random string)
JWT_SECRET="your-jwt-secret-here"

# Server port
PORT=5000

# Cloudinary (optional) credentials for image uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Frontend/Backend URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Helpful: keep sensitive values out of VCS and use environment-specific secrets managers when possible.
